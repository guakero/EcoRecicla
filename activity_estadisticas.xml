<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeFondo"
    android:backgroundTint="@color/verdeFondo"
    tools:context=".Estadisticas">


    <ImageView
        android:layout_width="137dp"
        android:layout_height="205dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/eco_recicla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="387dp"
        android:layout_height="58dp"
        android:layout_marginTop="268dp"
        android:text="ESTADISTICA MENSUAL DE RECICLAJE POR CATEGORIA"
        android:textAlignment="center"
        android:textColor="@color/verde"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/PapyPlas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnPapel,btnPlastico,btnPapelyPlastico" />

    <Button
        android:id="@+id/btnPapelyPlastico"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:backgroundTint="#A4F5AA"
        android:text="Papel y Plastico"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        tools:layout_editor_absoluteY="358dp" />


    <ImageButton
        android:id="@+id/btnPlastico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/local_dining_fill0_wght400_grad0_opsz24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="378dp" />

    <ImageButton
        android:id="@+id/btnPapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/note_stack_fill0_wght400_grad0_opsz24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="378dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/EquiposElectronicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnEqEleBat, btnBateria, btnEqElectronicos " />

    <Button
        android:id="@+id/btnEqEleBat"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:backgroundTint="#A4F5AA"
        android:text="Equipos Electronicos y Baterias"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        tools:layout_editor_absoluteY="430dp" />


    <ImageButton
        android:id="@+id/btnBateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/battery_full_fill0_wght400_grad0_opsz24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="451dp" />

    <ImageButton
        android:id="@+id/btnEqElectronicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/Equipos_Electronicos"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="451dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/VidriosTextiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnVidriosTextiles, btnVidrio, btnTextiles " />

    <Button
        android:id="@+id/btnVidriosTextiles"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:backgroundTint="#A4F5AA"
        android:text="Vidrio y Textiles"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        tools:layout_editor_absoluteY="506dp" />


    <ImageButton
        android:id="@+id/btnVidrio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/liquor_fill0_wght400_grad0_opsz24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="521dp" />

    <ImageButton
        android:id="@+id/btnTextiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="center"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/styler_fill0_wght400_grad0_opsz24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="521dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/OrganicosyAceite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnOrganicos_Aceite, btnOrganicos, btnAceite " />

    <Button
        android:id="@+id/btnOrganicos_Aceite"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:backgroundTint="#A4F5AA"
        android:text="Organicos y Aceite"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        tools:layout_editor_absoluteY="581dp" />

    <ImageButton
        android:id="@+id/btnOrganicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/compost_fill0_wght400_grad0_opsz24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="604dp" />

    <ImageButton
        android:id="@+id/btnAceite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/verdeBoton"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/format_color_fill_fill0_wght400_grad0_opsz24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="604dp" />


</androidx.constraintlayout.widget.ConstraintLayout>