<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount"
    android:background="@color/verdeFondo"
    android:backgroundTint="@color/verdeFondo">

    <ImageView
        android:layout_width="137dp"
        android:layout_height="205dp"
        android:src="@drawable/eco_recicla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="93dp"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="330dp"
        android:textColor="@color/black"
        android:textColorHint="#A6002107"
        android:backgroundTint="@color/verdeFuente2"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="390dp"
        android:textColor="@color/black"
        android:textColorHint="#A6002107"
        android:backgroundTint="@color/verdeFuente2"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Contraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="450dp"
        android:textColor="@color/black"
        android:textColorHint="#A6002107"
        android:backgroundTint="@color/verdeFuente2"/>

    <CheckBox
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#A4F5AA"
        android:onClick="onCheckboxClicked"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="511dp"
        android:layout_marginLeft="62dp"
        android:textAlignment="textStart"
        android:text="Acepto los términos y condiciones"
        android:textColor="@color/verde"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:backgroundTint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="563dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/verde"/>

</androidx.constraintlayout.widget.ConstraintLayout>