<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCompletado"
    android:background="@drawable/fondo_ecorcicla1_03"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/eco_recicla_c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="93dp"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="28dp"
        android:textColor="@color/verde"
        android:text="Bienvenido"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="337dp"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:textColor="#A6002107"
        android:text="Su registro al Software de gestión de reciclaje más importante del país ha sido exitoso, a continuación, puede interactuar con la aplicación y ayudarnos a construir un mejor país a través del reciclaje. "
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="450dp" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:backgroundTint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="553dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/verde"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/home_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="200dp"
        android:background="@color/verde"/>



</androidx.constraintlayout.widget.ConstraintLayout>